<CORE>
  <events>
    <mouseClick>
      <int/>
      <int/>
      <bool/>
    </mouseClick>
     <explosion>
        <entity/>
     </explosion>
     <getBoundingBox>
        <entity/>
     </getBoundingBox>
  </events>
   <eventHandlers>
     <mouseClickHandler file ="handleMouse.lua" type="script">
       <argNames>
         <x/>
         <y/>
       </argNames>
       <format>
         <int/>
         <int/>
       </format>
     </mouseClickHandler>
      <explosionHandler file ="runEntity.lua" type="script" >
         <argNames>
            <E1/>
         </argNames>
         <format>
            <entity/>
         </format>
      </explosionHandler>
      <followHandler file ="runSelf.lua" type="entityScript">
         <argNames>
            <x/>
            <y/>
         </argNames>
         <format>
            <int/>
            <int/>
         </format>
      </followHandler>
   </eventHandlers>
</CORE>